<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/titleID"
                android:layout_height="90dp"
                android:textColor="@color/colorTextWhite"
                android:background="@color/colorTurqouise"
                android:gravity="left"
                android:textSize="36dp"
                android:paddingLeft="26dp"
                android:paddingRight="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageViewDetailFragment"
                    android:layout_marginLeft="28dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2015"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="120 min"
                        android:textSize="20dp"
                        android:paddingTop="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8.1/10"
                        android:paddingTop="8dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorToolbar"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="MARK AS FAVOURITE"
                        android:background="@color/colorTurqouise"
                        android:layout_marginTop="22dp"
                        android:clickable="true" />

                </LinearLayout>

         </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testText"
            android:paddingTop="16dp"
            android:textSize="16dp"
            android:paddingLeft="8dp"/>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trailers:"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trailer 1"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"/>

                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#6e6e6e" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trailer 2"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b9414141" />



        </LinearLayout>

    </ScrollView>



    

</LinearLayout>